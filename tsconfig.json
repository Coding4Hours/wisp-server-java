{
    "compilerOptions": {
        "outDir": "dist",
        "lib": ["ESNext"],
        "target": "ESNext",
        "module": "Node16",
        "allowImportingTsExtensions": true,
        "emitDeclarationOnly": true,
        "moduleResolution": "Node16",
        "strict": true,
        "stripInternal": true,
        "esModuleInterop": true,
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": false
    },
    "include": ["src"]
}
